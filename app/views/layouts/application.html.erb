<!DOCTYPE html>
<html>
  <head>
    <title>Hondanamanager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-info">
        <div class="container">
          <div class="rogo">
          <p class="navbar-brand size-20px"></p>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown"
                        aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto p-3" >
             <%  if admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>ジャンル一覧<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>投稿一覧<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>ユーザー一覧<% end %>
              </li>
              <li class="nav-item">
                <%= link_to  destroy_admin_session_path, method: :delete, class: 'nav-link text-light' do %>ログアウト<% end %>
              </li>
             <% elsif user_signed_in? %>
             <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>Top<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>投稿一覧<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-light' do %>マイページ<% end %>
              </li>
              <li class="nav-item">
                <%= link_to  destroy_user_session_path, method: :delete, class: 'nav-link text-light' do %>ログアウト<% end %>
              </li>

              <% else %>

              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-dark' do %>Top<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-dark' do %>投稿一覧<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-dark' do %>新規登録<% end %>
              </li>
              <li class="nav-item">
                <%= link_to "/", class: 'nav-link text-dark' do %>ログイン<% end %>
              </li>
             <% end %>

            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer>
     <div class="mx-auto p-3 border-top text-center">
      <p></p>
     </div>
    </footer>
  </body>
</html>
