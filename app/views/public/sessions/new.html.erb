<div class="container m-4 mx-auto">
  <div class="row">
   <h3 class="bg-light mb-4">ログイン</h3>
  </div>
  <br>
  <%= form_with model: @user, url: user_session_path do |f| %>
  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2 col-form-label">
     <%= f.label :email, "メールアドレス" %>
    </div>
     <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "col-lg-5", :placeholder => "sample@example.com" %>
  </div>
  <div class="form-group row">
    <div class="col-lg-2"></div>
    <div class="col-lg-2 col-form-label">
     <%= f.label :password, "パスワード" %>
    </div>
     <%= f.password_field :password, autocomplete: "current-password", :class => "col-lg-5" %>
  </div>
  <br>
  <div class="form-group row">
    <div class="col-sm-2"></div>
    <div class="col-sm-2"></div>
    <%= f.submit "ログイン", :class => "btn btn-primary col-lg-2 mb-5 mt-3" %>
  </div>
  <% end %>

  <div class="row">
   <div class="col-2"></div>
   <h3 class="col-sm-5 text-center bg-light ml-5 mb-3">ユーザー登録がお済みでない方</h3>
  </div>
  <div class="row ml-5 mb-4">
   <div class="col-sm-3"></div>
   <%= link_to new_user_registration_path do %>こちら<% end %>から新規登録を行なってください。
  </div>
</div>