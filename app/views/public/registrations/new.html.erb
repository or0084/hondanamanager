<div class="container">
  <div class="row">

 <div class="col-10">
   <br>
  <div class="row">
    <h3 class="bg-light ml-5 mb-5 text-center">ユーザー登録</h3>
  </div>
  <br>

  <%= form_with model: @user, url: user_registration_path, id: "form" do |f| %>

  <div class="form-group row">
    <label for="text" class="col-lg-3">ユーザー名</label>
    <div class="col-1"></div>
    <%= f.text_field :name, :class => "col-3", :placeholder => "令和道子" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">メールアドレス</label>
    <div class="col-1"></div>
    <%= f.email_field :email, :class => "col-3", :placeholder => "sample@example.com" %>
  </div>
  <div class="form-group row">
    <label for="text" class="col-lg-3">パスワード（６文字以上）</label>
    <div class="col-1"></div>
    <%= f.password_field :password, autocomplete: "new-password", :class => "col-3" %>
  </div>

  <div class="form-group row">
    <label for="text" class="col-lg-3">パスワード（確認用）</label>
    <div class="col-1"></div>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "col-3" %>
  </div>


  <div class="form-group row">
    <div class="col-lg-3"></div>
    <div class="col-1"></div>
  </div>
    <%= f.submit "登録", :class => "btn btn-success col-lg-2 mb-5 mt-3" %>
  <% end %>

  <div class="row">
    <h3 class="bg-light ml-5 mb-3">既に登録済みの方</h3>
  </div>
  <div class="row ml-5 mb-4">
  <%= link_to user_session_path do %>こちら<% end %>からログインしてください。
</div>
  </div>
</div>
</div>
