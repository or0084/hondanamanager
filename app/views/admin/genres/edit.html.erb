<div class="container m-4">
  <div class="row">
    <div class="col-lg-1"></div>
    <h3 class="bg-light">ジャンル編集</h3>
  </div>
  <br>
  <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
  <div class="form-group row">
    <label for="text" class="col-lg-2 col-form-label ml-5 mt-3 mb-3">ジャンル名</label>


    <%= f.text_field :name, id:"genre_name", :class => "col-2 mr-5 mt-3 mb-3" %>
    <%= f.submit "変更を保存", :class => "btn btn-success col-２ ml-5 mt-3 mb-3" %>
  </div>
  <% end %>
</div>