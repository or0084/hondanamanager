<div class="container">
  <div class="row">ユーザー詳細</div>
  <div class="row-5">
    <table class="table-borderless text-algin-left">
        <thead>
          <tr>
            <th style="width: 55%">ユーザーID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザー名</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= @user.is_active ? '退会' : '有効' %></td>
          </tr>
        </thead>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user.id), :class => "btn btn-success" %>

  </div>
</div>